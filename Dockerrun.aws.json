{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name" : "client",
            "image" : "apozzoli/multi-client",
            "hostname" : "client",
            "essential" : false,
            "memory" : 128
        },
        {
            "name" : "server",
            "image" : "apozzoli/multi-server",
            "hostname" : "api",
            "essential" : false,
            "memory" : 128
        },
        {
            "name" : "worker",
            "image" : "apozzoli/multi-worker",
            "hostname" : "worker",
            "essential" : false,
            "memory" : 128
        },
        {
            "name" : "nginx",
            "image" : "apozzoli/multi-nginx",
            "hostname" : "worker",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort" : 80,
                    "containerPort" : 80
                }
            ],
            "links" : ["client", "server"],
            "memory" : 128
        }
    ]
}